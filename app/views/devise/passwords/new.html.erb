<div class="container">
  <h2>パスワードを再設定します。</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードリセット用のメールを送信します", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>