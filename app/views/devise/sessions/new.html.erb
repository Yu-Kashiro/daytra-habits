<div class="container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "text" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "text" %>
    </div>


    <div class="actions">
      <%= f.submit "ログイン", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>